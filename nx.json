{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "nyxusd",
  "affected": {
    "defaultBase": "main"
  },
  "workspaceLayout": {
    "appsDir": "packages",
    "libsDir": "libs"
  },
  "implicitDependencies": {
    "package.json": {
      "dependencies": "*",
      "devDependencies": "*"
    },
    "tsconfig.base.json": "*",
    "nx.json": "*"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint", "test", "e2e"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "test": {
      "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"],
      "cache": true
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"],
      "cache": true
    }
  },
  "generators": {
    "@nrwl/node:library": {
      "buildable": true,
      "publishable": false,
      "strict": true,
      "unitTestRunner": "jest"
    },
    "@nrwl/node:application": {
      "strict": true,
      "unitTestRunner": "jest"
    }
  },
  "defaultProject": "cdp-core"
}