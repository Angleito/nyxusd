{
  "name": "@nyxusd/root",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "libs/*"
  ],
  "scripts": {
    "build": "npm run build:frontend",
    "dev": "concurrently \"npm run dev:api\" \"cd frontend && npm run dev\"",
    "test": "jest",
    "lint": "cd frontend && npm run lint",
    "clean": "rm -rf dist node_modules packages/*/node_modules libs/*/node_modules packages/*/dist libs/*/dist coverage",
    "build:frontend": "cd frontend && npm run build",
    "build:api": "cd api && npm install && npm run build",
    "dev:api": "node dev-server.js",
    "vercel-build": "npm run build:frontend"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vercel/node": "^5.3.10",
    "concurrently": "^9.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-functional": "^5.0.0",
    "eslint-plugin-import": "^2.29.0",
    "fast-check": "^3.13.1",
    "jest": "^29.6.1",
    "jest-environment-node": "^29.6.1",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "fp-ts": "^2.16.1",
    "io-ts": "^2.2.20",
    "monocle-ts": "^2.3.13",
    "ramda": "^0.29.0",
    "rxjs": "^7.8.1",
    "sanctuary": "^3.1.0",
    "zod": "^3.22.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/nyxusd.git"
  },
  "keywords": [
    "cdp",
    "stablecoin",
    "midnight-protocol",
    "functional-programming",
    "defi",
    "typescript"
  ],
  "author": "NYXUSD Team",
  "description": "Functional CDP (Collateralized Debt Position) system built on Midnight Protocol"
}
