{
  "name": "@nyxusd/root",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "libs/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "clean:build": "tsc --build --clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --selectProjects unit-tests",
    "test:integration": "jest --selectProjects integration-tests", 
    "test:property": "jest --selectProjects property-tests",
    "test:coverage": "jest --coverage",
    "test:coverage:unit": "jest --selectProjects unit-tests --coverage",
    "test:coverage:integration": "jest --selectProjects integration-tests --coverage",
    "test:coverage:property": "jest --selectProjects property-tests --coverage",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit --skipLibCheck",
    "clean": "npm run clean:build && rm -rf dist node_modules packages/*/node_modules libs/*/node_modules packages/*/dist libs/*/dist coverage",
    "validate": "npm run lint && npm run type-check && npm run test",
    "build:frontend": "cd frontend && npm install && npm run build",
    "build:api": "cd api && npm install && npm run build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "vercel-build": "cd frontend && npm install --legacy-peer-deps && npm run build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-functional": "^5.0.0",
    "eslint-plugin-import": "^2.29.0",
    "fast-check": "^3.13.1",
    "jest": "^29.6.1",
    "jest-environment-node": "^29.6.1",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "fp-ts": "^2.16.1",
    "io-ts": "^2.2.20",
    "monocle-ts": "^2.3.13",
    "rxjs": "^7.8.1",
    "ramda": "^0.29.0",
    "sanctuary": "^3.1.0",
    "zod": "^3.22.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/nyxusd.git"
  },
  "keywords": [
    "cdp",
    "stablecoin",
    "midnight-protocol",
    "functional-programming",
    "defi",
    "typescript"
  ],
  "author": "NYXUSD Team",
  "description": "Functional CDP (Collateralized Debt Position) system built on Midnight Protocol"
}